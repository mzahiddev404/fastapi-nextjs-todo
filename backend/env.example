# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment

# Database Configuration
project_db_url=mongodb://localhost:27017
project_db_name=todo_app_db
# For MongoDB Atlas: project_db_url=mongodb+srv://username:password@cluster.mongodb.net

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Redis Configuration (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379
# For Redis Cloud: redis://username:password@host:port

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# FastAPI Configuration
API_HOST=127.0.0.1
API_PORT=8000

# Security Configuration
MAX_REQUEST_SIZE=10485760
CSRF_SECRET=your-csrf-secret-key-change-this-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# Performance Configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_IDLE_TIME=30000
DATABASE_CONNECT_TIMEOUT=20000
